@model AppointmentScheduling.Models.ViewModels.RegisterViewModel

<h2>Signup</h2>
<form method="post" asp-action="Register" asp-controller="Account">
    @if(User.IsInRole(AppointmentScheduling.Utility.Helper.Admin))
    {
        <h4>Create a new Admin</h4>
    }
    else
    {
        <h4>Create a new Account</h4>
    }
    <hr/>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3 row">
        <label asp-for="Name" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="Password" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="ConfirmPassword" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="RoleName" class="col-md-2"></label>
        <div class="col-md-10">
            <select asp-for="RoleName" asp-items="@AppointmentScheduling.Utility.Helper.GetRolesDropDown(User.IsInRole(AppointmentScheduling.Utility.Helper.Admin))" class="form-control"></select>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <div class="col-md-10 offset-md-2">
            <input type="submit" value="Register" class="btn btn-success" />
        </div>
        @if (!User.IsInRole(AppointmentScheduling.Utility.Helper.Admin))
        {
            <div class="col-md-10 offset-md-2">
                <a asp-action="Login">Sign In</a>
            </div>
        }
    </div>
</form>

 @section Scripts
 {
@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }